<h1><%= @user.email %></h1>
<ul>
    <li>Name: <%= @user.first_name %></li>
</ul>
<% @articles.each do |article| %>
	<h1><%= link_to article.title, article %></h1>
	<div>
		<%= article.body %>
	</div>
<%end%>
<% @comments.each do |comment| %>
		<li>		
			<b><%= comment.title %></b> - <%= comment.body %> - <%= comment.user.username %> <%= time_ago_in_words(comment.created_at) %> 
		</li>
<%end%>