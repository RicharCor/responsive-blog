<div class="row center-xs">
    <div class="col-md-4 col-xs-11 white relative mega-padding top-100 box-shadow">
        <%= image_tag "avatar.jpg", class:"circle box-150 margin-top--100" %>

        <p class="subtitle large-padding-bottom border-bottom large-margin-bottom">
            Iniciar sesión
        </p>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="col-xs-12 medium-margin-bottom">
                <%= f.email_field :email, autofocus: true, required: true, placeholder: "Correo electronico", class:"full medium-padding" %>
            </div>

            <div class="col-xs-12 medium-margin-bottom">
                <%= f.password_field :password, required: true, placeholder: "Contraseña", class:"full medium-padding", autocomplete: "off" %>
            </div>

            <% if devise_mapping.rememberable? %>
                <div class="col-xs-12 medium-margin-bottom">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                </div>
            <%end%>

            <div class="col-xs-12 medium-margin-bottom">
                <%= f.submit "Iniciar sesión", class:"btn blue small-border-radius" %>
            </div>

            <div class="col-xs-12">
                <%= render "devise/shared/links" %>
            </div>
        <%end%>
    </div>
</div>