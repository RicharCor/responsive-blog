<div class="fluid-container" style="margin-top: 90px;">
    <div class="row">
        <div class="col-sm-2" style="position: fixed; top: 70px; left: 0;">
            <% if user_signed_in? %>
                <h4>Chatrooms</h4>
                <ul>
                    <% current_user.chatrooms.each do |chatroom| %>
                        <li>
                            <%= link_to chatroom.name, chatroom, data: {behavior: "chatroom-link", chatroom_id: chatroom.id } %>
                        </li> 
                    <%end%>   
                </ul>
            <%end%>    
        </div>

        <div class="col-sm-10 col-sm-offset-2">
			<p>
			  <strong>Name:</strong>
			  <%= @chatroom.name %>
			</p>

			<div data-behavior='messages' data-chatroom-id='<%= @chatroom.id %>'>
				<% @messages.each do |message| %>
					<%= render message %>
				<%end%>		
			</div>

			<%= form_for [@chatroom, Message.new] do |f| %>
				<%= f.text_area :body, rows: 1, autofocus: true %>
				<%= f.submit "Publicar" %>
			<%end%>
        </div>        
    </div>    
</div>
